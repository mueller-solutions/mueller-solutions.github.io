---
import '../styles/main.scss';
import HtmlHead from '../components/HtmlHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

type Props = {
  title?: string;
  description?: string;
  keywords?: string;
};

const { title, description, keywords } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <HtmlHead title={title} description={description} keywords={keywords}>
      <slot name="html-head" slot="html-head" />
    </HtmlHead>
  </head>
  <body>
    <Header />
    <slot />
    <Footer />
  </body>
</html>
