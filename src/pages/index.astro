---
export const prerender = true;

import { Image } from 'astro:assets';

import MainLayout from '../layouts/main-layout.astro';
import FinalEngagement from '../components/final-engagement.astro';
import HeroSection from '../components/hero-section.astro';
import Icon from '../components/icon.astro';
import Testimonial from '../components/testimonial.astro';
import FreeOptimizationChecklistModal from '../components/free-optimization-checklist-modal.astro';
import problemStatement from '../media/home/problem-statement.webp';
import solutionsCollage from '../media/home/solutions-collage.webp';
import florianMueller from '../media/home/florian-mueller.webp';
import HeroEngagement from '../components/hero-engagement.astro';
---

<MainLayout>
  <!-- Hero -->
  <link rel="preload" href="/images/home/man-with-laptop.webp" as="image" type="image/webp" slot="html-head" />
  <HeroSection image="home/man-with-laptop">
    <h1 class="heading1 inverted">Websites That Drive Results</h1>
    <p class="text-balance text-pretty-mobile">
      Get a fast, modern website that captivates your audience, builds your brand, and drives your business forward.
      With expert web design in Austin, Texas, we’ll help you stand out online.
    </p>
    <HeroEngagement />
  </HeroSection>

  <FreeOptimizationChecklistModal />

  <!-- Testimonials -->
  <section class="section gradient-down">
    <div class="wrapper">
      <header>
        <h2 class="heading2">Real Results, Real Impact</h2>
        <p class="body1 text-balance text-pretty-mobile">
          Talk is cheap, but results speak volumes. Here's how we've helped businesses like yours overcome their biggest
          challenges and achieve exceptional results
        </p>
      </header>
      <div class="even-columns three-columns">
        <Testimonial
          quote="Awesome Company is all I can say!! Mueller Solutions is top notch from start to finish. My website came out perfect. They rebuilt my site exactly the way I wanted it. Thank y'all!"
          author="Charlie Tijerina"
          company="Owner & CEO"
          image="https://scontent-dfw5-1.xx.fbcdn.net/v/t39.30808-1/448399254_10233213376942392_8931406179601775037_n.jpg?stp=cp6_dst-jpg_s480x480_tt6&_nc_cat=105&ccb=1-7&_nc_sid=e99d92&_nc_ohc=DtFLz9B0-6cQ7kNvgFTawDP&_nc_zt=24&_nc_ht=scontent-dfw5-1.xx&_nc_gid=AkbH-02wUY_VJm_nfWWH2uG&oh=00_AYDTn3Ni0EXgHYICJEpjMU44fJuE6eTuDLadkVTCoxpnCA&oe=678D56ED"
          href="https://www.facebook.com/TexasGo2Guy"
        />

        <Testimonial
          quote="Florian is a great frontend engineer. He has vast frontend and overall architectural knowledge and he constantly keeps himself informed about what is going on in the community."
          author="Stephan Conrad"
          company="Senior Director of Engineering, Veeva Systems"
          image="https://media.licdn.com/dms/image/v2/C4D03AQHyAQNlEHakEA/profile-displayphoto-shrink_100_100/profile-displayphoto-shrink_100_100/0/1516825198799?e=1738195200&v=beta&t=Te1uzf_mjb8b17_6lD0q_uU04HY8LW3nXGxFcJINB_Q"
          href="https://www.linkedin.com/in/stephan-conrad-627b5a19"
        />
        <Testimonial
          quote="I had the pleasure of working closely with Florian for several years, and his expertise in frontend development and architecture consistently impressed me. Throughout our collaborations, he demonstrated a deep understanding of modern web technologies and frameworks."
          author="Daniela Grebe"
          company="Product Management at Univention"
          image="https://media.licdn.com/dms/image/v2/C4E03AQHoRlNQAJQwAQ/profile-displayphoto-shrink_100_100/profile-displayphoto-shrink_100_100/0/1516324221316?e=1741824000&v=beta&t=c_B8lDTfEV-sohoNPtvDN3ZMPiUBmJcXKo_LLc0UThE"
          href="https://www.linkedin.com/in/dgrebe/"
        />

        <!-- <Testimonial
          quote="Florian is a great frontend engineer. He has vast frontend and overall architectural knowledge and he constantly keeps himself informed about what is going on in the community."
          author="Stephan Conrad"
          company="Senior Director of Engineering, Veeva Systems"
          image="https://media.licdn.com/dms/image/v2/C4D03AQHyAQNlEHakEA/profile-displayphoto-shrink_100_100/profile-displayphoto-shrink_100_100/0/1516825198799?e=1732752000&v=beta&t=4XzxITsl63UvvvpC_OzjCmMc-PJy-D2brsQ2en3LTgs"
          href="https://www.linkedin.com/in/stephan-conrad-627b5a19"
        />
        <Testimonial
          quote="Florian is a great frontend engineer. He has vast frontend and overall architectural knowledge and he constantly keeps himself informed about what is going on in the community."
          author="Stephan Conrad"
          company="Senior Director of Engineering, Veeva Systems"
          image="https://media.licdn.com/dms/image/v2/C4D03AQHyAQNlEHakEA/profile-displayphoto-shrink_100_100/profile-displayphoto-shrink_100_100/0/1516825198799?e=1732752000&v=beta&t=4XzxITsl63UvvvpC_OzjCmMc-PJy-D2brsQ2en3LTgs"
          href="https://www.linkedin.com/in/stephan-conrad-627b5a19"
        /> -->
      </div>
    </div>
  </section>
  <!-- Problem Statement -->
  <section class="section wrapper">
    <div class="even-columns two-columns no-gap items-center">
      <link rel="preload" href="/images/home/problem-statement.webp" as="image" type="image/webp" slot="html-head" />
      <Image
        src={problemStatement}
        alt="Problem Statement"
        class="rounded"
        widths={[480, problemStatement.width]}
        sizes={`(max-width: 480px) 480px, ${problemStatement.width}px`}
        loading="eager"
      />
      <div class="card white shadow-strong overlap-left">
        <p class="tagline">Your Website, Built to Work for You</p>
        <h2 class="heading2">Struggling to Build Your Website?</h2>
        <p class="body1 text-balance text-pretty-mobile">
          Not enough time or know-how to get it done? Don’t worry—we’ve got your back. As a trusted web design company,
          we create fast, modern websites that attract customers and help your business grow. Let us handle the details
          while you focus on what you do best.
        </p>
      </div>
    </div>
  </section>
  <!-- Why Choose Us -->
  <section class="section wrapper">
    <header>
      <p class="tagline">See The Difference We Can Make</p>
      <h2 class="heading2">Why Choose Us?</h2>
      <p class="body1 text-balance text-pretty-mobile">
        Your website is the foundation of your online success, and we’re here to ensure it delivers results. As your #1
        web design company here in Austin, Texas, we specialize in front-end development services that create modern,
        high-performing websites tailored to your business goals. Here’s what sets us apart:
      </p>
    </header>
    <ul class="even-columns three-columns">
      <li class="card blue align-left fade-from-bottom">
        <h3 class="heading3">Blazing Fast Performance</h3>
        <p class="body2 text-balance text-pretty-mobile">
          Don’t let slow load times drive visitors away. We optimize your site with cutting-edge website development
          practices to deliver lightning-fast performance, keeping users engaged and improving search engine rankings.
        </p>
      </li>
      <li class="card purple align-left fade-from-bottom">
        <h3 class="heading3">Seamless User Experience</h3>
        <p class="body2 text-balance text-pretty-mobile">
          Our web design team focuses on intuitive, user-friendly designs that ensure smooth interactions and keep
          visitors coming back for more.
        </p>
      </li>
      <li class="card green align-left fade-from-bottom">
        <h3 class="heading3">Scalable Solutions</h3>
        <p class="body2 text-balance text-pretty-mobile">
          Whether you’re a local startup or an expanding enterprise, we provide website development that’s built to grow
          with your business, handling more traffic and features with ease.
        </p>
      </li>
    </ul>
  </section>
  <!-- Our Services -->
  <section class="section primary">
    <div class="wrapper">
      <header>
        <p class="tagline inverted">Solutions That Drive Success</p>
        <h2 class="heading2 inverted">Our Services</h2>
        <p class="body1 inverted text-balance text-pretty-mobile">
          We specialize in building high-performance, scalable websites and web applications that elevate your business.
          We modernize your legacy systems and craft custom web solutions. We ensure your digital presence is ready to
          scale and succeed.
        </p>
      </header>
      <ul class="even-columns three-columns">
        <li class="card white shadow align-center fade-from-bottom">
          <Icon name="frontend-performance" width="52" height="52" />
          <h3 class="heading3">Performance-Optimized Website Development</h3>
          <p class="body2 text-balance text-pretty-mobile">
            We design and develop websites and apps that are built for speed. Our focus on front-end development ensures
            lightning-fast performance, keeping users engaged and driving more conversions. A fast, well-optimized site
            isn’t just a bonus—it’s essential for growing your business.
          </p>
        </li>
        <li class="card white shadow align-center fade-from-bottom">
          <Icon name="scalable-architecture" width="60" height="52" />
          <h3 class="heading3">Legacy Website and App Modernization</h3>
          <p class="body2 text-balance text-pretty-mobile">
            Is your outdated system holding your business back? We specialize in website development and modernizing web
            applications, turning legacy systems into fast, scalable solutions. Whether it’s a new design, a better user
            experience, or advanced features, we’ll ensure your technology is ready to keep up with your business.
          </p>
        </li>
        <li class="card white shadow align-center fade-from-bottom">
          <Icon name="cutting-edge-technology" width="59" height="52" />
          <h3 class="heading3">Custom Web Application Development</h3>
          <p class="body2 text-balance text-pretty-mobile">
            Your business deserves more than a cookie-cutter solution. We create custom web designs and front-end
            development solutions tailored to your specific needs. With a focus on scalability and high performance,
            we’ll deliver a web application that helps your business stand out and grow.
          </p>
        </li>
      </ul>
      <div class="actions">
        <a href="/services" class="button">Explore Our Services</a>
      </div>
    </div>
  </section>
  <!-- Proven Process to Success -->
  <section class="section align-left wrapper">
    <div class="flex flex-sm-col gap-4 items-center">
      <div>
        <header>
          <p class="tagline">Proven Process to Success</p>
          <h2 class="heading2">Innovative Solutions With Integrity</h2>
          <p class="body1 text-balance text-pretty-mobile">
            With over 20 years of experience, we deliver web design, website development, and front-end development
            solutions that not only meet your current needs but are also built to scale with your business. Our proven
            process ensures that every project is tailored to your unique goals and sets the foundation for long-term
            success.
          </p>
        </header>
        <div class="flex flex-col gap-4">
          <ul data-type="list">
            <li class="text-balance text-pretty-mobile">
              <strong>Understand Your Needs:</strong> We begin by diving deep into your business goals, challenges, and vision
              to ensure our solutions align perfectly with your objectives.
            </li>
            <li class="text-balance text-pretty-mobile">
              <strong>Audit & Analyze:</strong> Through a comprehensive performance audit, we identify areas where your website
              or app can improve in speed, usability, and scalability.
            </li>
            <li class="text-balance text-pretty-mobile">
              <strong>Craft a Custom Strategy:</strong> Using insights from the audit, we create a detailed, tailored plan
              to address your unique challenges and deliver measurable results.
            </li>
            <li class="text-balance text-pretty-mobile">
              <strong>Implement & Optimize:</strong> From design to development, we implement cutting-edge website development
              techniques to transform your platform into a fast, modern, and high-performing solution.
            </li>
            <li class="text-balance text-pretty-mobile">
              <strong>Test for Perfection:</strong> Rigorous testing ensures every element of your front-end development
              functions flawlessly, providing users with an exceptional experience.
            </li>
            <li class="text-balance text-pretty-mobile">
              <strong>Ongoing Support:</strong> We don’t stop at delivery. We provide continuous support to maintain, update,
              and optimize your platform, keeping it aligned with your business as it grows.
            </li>
          </ul>
          <div>
            <button id="get-started-button" class="button primary" data-free-consultation>
              Ready To Get Started
            </button>
          </div>
        </div>
      </div>
      <Image
        src={solutionsCollage}
        alt="Solutions Collage"
        class="fade-from-right"
        widths={[480, solutionsCollage.width]}
        sizes={`(max-width: 480px) 480px, ${solutionsCollage.width}px`}
      />
    </div>
  </section>

  <!-- Meet Florian -->
  <section class="section align-left">
    <div class="wrapper">
      <div class="flex flex-sm-col gap-4 items-center">
        <div class="fade-from-left">
          <header>
            <p class="tagline">Experience You Can Trust</p>
            <h2 class="heading2">Meet Florian Mueller</h2>
            <p class="body1 text-balance text-pretty-mobile">
              With over <strong>23 years of experience</strong> in web development, I've had the opportunity to lead projects
              of all sizes—from small agency initiatives to large-scale enterprise solutions across the U.S. and Europe.
              Today, as the founder of <strong>MUELLER</strong>, I bring that deep expertise to help businesses thrive
              in the digital landscape. My focus goes beyond just delivering web development; I"m dedicated to
              integrating cutting-edge technologies like <strong>AI</strong> to provide innovative, scalable solutions. I
              work closely with each client to ensure every project not only meets but
              <strong>exceeds expectations</strong>, with the goal of building lasting partnerships that drive long-term
              success.
            </p>
          </header>
          <button id="lets-work-together-button" class="button primary" data-free-consultation>
            Let's Work Together
          </button>
        </div>
        <Image
          src={florianMueller}
          alt="Florian Mueller, Founder & CEO"
          class="fade-from-right"
          widths={[480, florianMueller.width]}
          sizes={`(max-width: 480px) 480px, ${florianMueller.width}px`}
        />
      </div>
    </div>
  </section>
  <!-- Final Engagement -->
  <FinalEngagement />
</MainLayout>
