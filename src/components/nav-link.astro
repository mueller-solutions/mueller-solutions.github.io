---
type Props = {
  href: string;
  isButton?: boolean;
};

const { href, isButton } = Astro.props;
const pathname = Astro.url.pathname;
const isActive = pathname === href;

if (isActive) {
  console.log('isActive', isActive, href, pathname);
}
---

<li class="nav-item">
  <a href={href} class:list={[isButton ? 'nav-button' : 'nav-link', isActive && 'active']}>
    <slot />
  </a>
  <slot name="dropdown" />
</li>
