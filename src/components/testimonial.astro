---
import Icon from './icon.astro';

type Props = {
  quote: string;
  author: string;
  company: string;
  image: string;
  href?: string;
};

const { quote, author, company, image, href } = Astro.props;
---

<div class="card white shadow slim fade-from-bottom flex flex-col gap-4">
  <Icon name="rating-stars" isRatingStars width="82" height="14" />
  <p class="body2 flex-1">
    {quote}
  </p>
  <div class="flex gap-1">
    <a href={href} rel="nofollow">
      <img src={image} alt={author} class="circle" width={40} height={40} loading="lazy" decoding="async" />
    </a>
    <div>
      <p class="heading4">{author}</p>
      <p class="body3 text-balance text-pretty-mobile">{company}</p>
    </div>
  </div>
</div>
