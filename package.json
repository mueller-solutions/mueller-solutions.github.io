{
  "name": "mueller-solutions-github-io",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev --host",
    "start": "astro dev",
    "build": "astro check && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "format": "prettier --write \"**/*.{ts,js,astro}\"",
    "lint:styles": "stylelint \"src/**/*.css\"",
    "lint:astro": "astro check",
    "lint:ci": "pnpm lint:styles && pnpm lint:astro",
    "lint:staged": "lint-staged -q",
    "test:unit": "vitest",
    "test:unit:coverage": "vitest --coverage",
    "prepare": "husky"
  },
  "lint-staged": {
    "**/*.{ts,js,astro}": [
      "prettier --write"
    ],
    "**/*.css": [
      "stylelint --fix"
    ]
  },
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/netlify": "^5.5.4",
    "@astrojs/partytown": "^2.1.2",
    "@astrojs/sitemap": "^3.2.1",
    "@playform/compress": "^0.1.6",
    "astro": "^4.16.7",
    "astro-robots-txt": "^1.0.0",
    "astro-useragent": "^4.0.2",
    "astrojs-service-worker": "^2.0.0",
    "autoprefixer": "^10.4.20",
    "axios": "^1.7.7",
    "cssnano": "^7.0.6",
    "cssnano-preset-advanced": "^7.0.6",
    "dayjs": "^1.11.13",
    "jsonwebtoken": "^9.0.2",
    "postcss-import": "^16.1.0",
    "postcss-mixins": "^11.0.3",
    "postcss-nested": "^6.2.0",
    "postcss-preset-env": "^10.0.8",
    "purgecss": "^6.0.0",
    "sass": "^1.80.4",
    "sharp": "^0.33.5",
    "typescript": "^5.6.3",
    "vitest": "^2.1.3",
    "wpapi": "^1.2.2"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.7.9",
    "@types/wpapi": "^1.1.4",
    "@vitest/coverage-v8": "2.1.3",
    "husky": "9.0.11",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "prettier-plugin-astro": "^0.14.1",
    "stylelint": "^16.10.0",
    "stylelint-config-standard": "^36.0.1"
  },
  "browserslist": "> 0.5%, last 2 versions, not ie <= 11, not ie_mob <= 11"
}
